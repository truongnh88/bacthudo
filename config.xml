<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.phonegap.demophonegap"
        version   = "3.1.0">
    <name>DemoPhoneGap</name>

    <description>
        DemoPhoneGap sample application that responds to the deviceready event.
    </description>

    <author href="http://tltiendat.com" email="tltiendat.game@gmail.com">
        Phoenix's Team
    </author>

    <feature name="http://api.phonegap.com/1.0/device" />

    <preference name="phonegap-version" value="2.0.0" />
    <preference name="orientation"      value="default" />
    <preference name="target-device"    value="universal" />
    <preference name="fullscreen"       value="false" />

    <icon src="smiley.png" />
    <icon src="smiley.png"   gap:platform="android"    gap:density="ldpi" />
   
</widget>